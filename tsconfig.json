{
  "compilerOptions": {
    "target": "es2016",                      
    "lib": ["ESNext", "DOM"],                          
    "module": "commonjs",                    
    "rootDir": "src",                        
    "resolveJsonModule": true,               
    "outDir": "build",                       
    "esModuleInterop": true,                 
    "forceConsistentCasingInFileNames": true,
    "strict": true,                          
    "noImplicitAny": true,                   
    "skipLibCheck": true                     
  }
}
